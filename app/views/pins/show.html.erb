<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @pin.name %>
</p>

<div class="high-scores">
  <% if @pin.high_scores.empty? != true %>
    <table>
      <tr>
        <th>Score</th>
        <th>Date</th>
        <th>Player</th>
      </tr>
      <% @pin.high_scores.order("score DESC").each do |x| %>
        <tr>
          <td><%= x.score %></td>
          <td><%= x.created_at %></td>
        </tr>
      <% end %>
    </table>
  <% else %>
    No high scores yet!
  <% end %>
</div>

<%= link_to 'Edit', edit_pin_path(@pin) %> |
<%= link_to 'Back', pins_path %>

<h3>Add a high score</h3>
<%= form_for([@pin, HiScore.new]) do |f| %>
  <%= f.label :score %>
  <%= f.text_field :score %>
  <br/>
  <%= f.submit %>
<% end %>
